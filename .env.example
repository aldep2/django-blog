# Variables d'environnement pour le développement local
# Copiez ce fichier vers .env et modifiez les valeurs

# Mode debug (True pour développement, False pour production)
DEBUG=True

# Clé secrète Django (générez-en une nouvelle pour la production)
SECRET_KEY=django-insecure-your-secret-key-here-change-this-in-production

# Hosts autorisés (séparez par des virgules)
ALLOWED_HOSTS=127.0.0.1,localhost

# URL de base de données (Railway fournira automatiquement DATABASE_URL)
# Laissez vide pour utiliser SQLite en local
DATABASE_URL=